<Window x:Class="SimpleChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Chat" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtMessage" Grid.Row="2" Margin="10" />
        <Button x:Name="btnSend" Grid.Row="2" Margin="10,0,0,0" Width="75" Height="25" Content="Send" Click="btnSend_Click"/>
        <ListBox x:Name="lstChat" Grid.Row="1" Margin="10" />
    </Grid>
</Window>
